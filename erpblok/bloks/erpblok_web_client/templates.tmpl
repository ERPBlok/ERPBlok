<templates>
    <!--
        It is the templating for client

        The client templating come from
        http://www.jsviews.com/#d.templates
    -->
    <template id="Space_left_Menu" type="text/x-jsrender">
        <div class="row hide-for-large">
            <menu class="top-menu" />
        </div>
        <div class="row space">
            <div class="columns large-3 show-for-large">
                <menu class="side-menu">
            </div>
            <div class="columns large-9">
                <div id="breadcrumb">
                </div>
                <div id="action-manager">
                </div>
            </div>
        </div>
    </template>
    <template id="Space_right_Menu" type="text/x-jsrender">
        <div class="row hide-for-large">
            <menu class="top-menu" />
        </div>
        <div class="row space">
            <div class="columns large-9">
                <div id="breadcrumb">
                </div>
                <div id="action-manager">
                </div>
            </div>
            <div class="columns large-3 show-for-large">
                <menu class="side-menu">
            </div>
        </div>
    </template>
    <template id="Space_top_Menu" type="text/x-jsrender">
        <div class="row">
            <menu class="top-menu" />
        </div>
        <div class="row space">
            <div class="columns">
                <div id="breadcrumb">
                </div>
                <div id="action-manager">
                </div>
            </div>
        </div>
    </template>
    <template id="Action" type="text/x-jsrender">
        <div id="action-{{:id}}" class="row action"/>
    </template>
    <template id="ViewManager" type="text/x-jsrender">
        <div class="row view-manager">
            <div class="columns large-7 button-group view-buttons">
            </div>
            <div class="columns large-3 medium-7">
            </div>
            <div class="columns large-2 medium-5">
                <nav class="view-selector">
                    <ul/>
                </nav>
            </div>
        </div>
    </template>
    <template id="ERPBlokViewManagerButton" type="text/x-jsrender">
        <a class="view-button button {{:visibility}}"
           data-function="{{:fnct}}"
           data-method="{{:method}}">{{:label}}</a>
    </template>
    <template id="ERPBlokViewManagerGroup" type="text/x-jsrender">
            <button data-toggle="{{:id}}"
                    class="button dropdown {{:visibility}}">{{:label}}</button>
            <div class="dropdown-pane" id="{{:id}}" data-dropdown>
                <div class="menu vertical">
                    {{for buttons}}
                        <a class="view-button button verticale {{:visibility}}"
                           data-function="{{:fnct}}"
                           data-params="{{:params}}">{{:label}}</a>
                    {{/for}}
                </div>
            </div>
    </template>
    <template id="View" type="text/x-jsrender">
        <div id="{{:id}}" class="row view {{:class_name}}"/>
    </template>
    <template id="ERPBlokViewSelector" type="text/x-jsrender">
        <li id="{{:id}}"
            title="{{:title_selector}}"
            class="item {{if !selectable}}hide{{/if}}">
            <a>
                <i class="{{:icon_selector}} menu-img"></i>
            </a>
        </li>
    </template>
    <template id="ViewList" extend="View" type="text/x-jsrender">
        <xpath action="insert" expression="./div">
            <table role="grid">
                <thead>
                    {{for options.headers ~checkbox=options.checkbox ~length= options.headers.length}}
                        <tr>
                            {{if #index == 0}}
                                {{if ~checkbox}}
                                    <th width="10px"
                                        rowspan="{{:~length}}">
                                        <input type="checkbox" id="all_checkbox"></input>
                                    </th>
                                {{/if}}
                            {{/if}}
                            {{for}}
                                <th id="{{:id}}"
                                    colspan="{{:colspan}}"
                                    rowspan="{{:rowspan}}"
                                >{{:label}}</th>
                            {{/for}}
                        </tr>
                    {{/for}}
                </thead>
                <tbody>
                </tbody>
            </table>
        </xpath>
    </template>
    <template id="ViewListLine" type="text/x-jsrender">
        <tr class="view-list-line">
            {{if options.checkbox}}
                <td>
                    <input type="checkbox" id="line_checkbox"></input>
                </td>
            {{/if}}
                    {{:fields}}
            {{for fields}}
                <td id="{{:id}}" class="selectable">
                    <field id="{{:id}}" />
                </td>
            {{/for}}
        </tr>
    </template>
    <template id="ERPBlokDialog" type="text/x-jsrender">
        <div id="modal{{:id}}" class="reveal" data-reveal>
            <div class="row panel">
                <div class="columns small-11 medium-11 large-11">
                    <h2 class="dialog-title"></h2>
                </div>
                <div class="columns small-1 medium-1 large-1 close-button">
                </div>
            </div>
            <div class="dialog-content"></div>
        </div>
    </template>
    <template id="ERPBlokDialogClose" type="text/x-jsrender">
        <a class="close-reveal-modal float-right" aria-label="Close">&#215;</a>
    </template>
    <template id="ERPBlokViewThumbnails" extend="View" type="text/x-jsrender">
        <xpath action="insert" expression="./div">
            <div id="thumbnails-{{:id}}" class="row thumbnails" data-equalizer>
            </div>
        </xpath>
    </template>
    <template id="ERPBlokViewThumbnailsSticker" type="text/x-jsrender">
        <div class="medium-6 large-3 columns"
             data-equalizer-watch>
            <div class="sticker panel radius selectable view-contnair">
            </div>
        </div>
    </template>
    <template id="ERPBlokViewField" type="text/x-jsrender">
        {{if readonly}}
            <span>{{:value}}</span>
        {{else}}
            <input id="{{:id}}" name="{{:id}}" type="{{:type}}"/>
        {{/if}}
    </template>
    <template id="ERPBlokViewFieldPassword" type="text/x-jsrender">
        {{if readonly}}
            {{if value}}
                <span> *** Unreadable protected value *** </span>
            {{else}}
                <span ></span>
            {{/if}}
        {{else}}
            <input id="{{:id}}" name="{{:id}}" type="password"/>
        {{/if}}
    </template>
    <template id="ERPBlokViewFieldx2One" type="text/x-jsrender">
        <div>
            {{if value}}
                {{if readonly}}
                    <a>{{:value}}</a>
                {{else}}
                    <input id="{{:id}}" name="{{:id}}"/>
                {{/if}}
            {{else}}
                <span></span>
            {{/if}}
        </div>
    </template>
    <template id="ERPBlokViewFieldBinary" type="text/x-jsrender">
        <img></img>
    </template>
    <template id="ERPBlokViewX2Many" type="text/x-jsrender">
        <div class="panel">
        </div>
    </template>
    <template id="ERPBlokViewMany2ManyChoices" type="text/x-jsrender">
        <div class="panel row small-up-{{:smallgrid}} medium-up-{{:mediumgrid}} large-up-{{:largegrid}}">
        </div>
    </template>
    <template id="ERPBlokViewMany2ManyChoice" type="text/x-jsrender">
        <div class="column">
            {{if readonly}}
                <input type="checkbox" DISABLED/>
            {{else}}
                <input type="checkbox" />
            {{/if}}
            <label>{{:label}}</label>
        </div>
    </template>
</templates>
