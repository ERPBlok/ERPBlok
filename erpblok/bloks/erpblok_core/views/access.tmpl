<templates>
    <template id="ERPBlokAccessGroupList" checkbox="0" inline="1">
        <field name="name" />
        <field name="label" />
        <field name="name" readonly="true" label="Recopie du label"/>
    </template>
    <template id="ERPBlokAccessWebLoginList">
        <field name="login" />
    </template>
    <template id="ERPBlokAccessWebLoginForm">
        <div class="row">
            <div class="columns small-12 medium-9 large-6">
                <label for="login" />
                <field name="login" />
                <label for="password" />
                <field name="password"/>
            </div>
        </div>
    </template>
    <template id="ERPBlokAccessUserList">
        <field name="first_name" />
        <field name="last_name" />
    </template>
    <template id="ERPBlokAccessUserForm">
        <div class="row">
            <div class="columns small-12 medium-6 large-6">
                <label for="first_name" />
                <field name="first_name" />
            </div>
            <div class="columns small-12 medium-6 large-6">
                <label for="last_name" />
                <field name="last_name"/>
            </div>
            <div class="columns small-12 medium-6 large-6">
                <label for="login" />
                <field name="login" 
                visible-only-if="fields.first_name"
                />
            </div>
            <div class="columns small-12 medium-6 large-6">
                <label for="default_space" />
                <field name="default_space" 
                writable-only-if="fields.first_name"
                />
            </div>
        </div>
        <field name="groups"
               type="Many2ManyChoices"
               display="label"
               largegrid="4"
               not-nullable-only-if="fields.first_name"
               mediumgrid="2"/>
    </template>
</templates>
